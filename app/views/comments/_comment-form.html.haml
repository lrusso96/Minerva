#comment-form-container.container-fluid
	.col-xs-3.col-sm-3.col-md-3.col-lg-3
	.col-xs-6.col-sm-6.col-md-6.col-lg-6
		= form_for [@user, @paper, @issue, @comment] do |f|
			.field
				= f.label :comment, class:"label_new"
				%br
				= f.text_area :comment, autofocus:true, autocomplete:"on", class:"textarea_new", rows: '10', cols: '60', maxlength: '510',minlength: '10', placeholder: "Insert here the comment.", id: "paper_description"

			.actions
				= f.submit "Create comment", class:"btn btn-green", id: "btn-new-comment"
	