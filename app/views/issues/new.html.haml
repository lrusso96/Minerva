
.container-fluid
= form_for [@user, @paper, @issue] do |f|
  .container-fluid.left
    .row
      .field
        = f.label :title, class:"label_new"
        %br
        = f.text_field :title, autofocus:true, autocomplete:"on", class:"textfield_new", maxlength: '70', placeholder: "Insert here the title about your paper.", id: "paper_title"

      .field
        = f.label :description, class:"label_new"
        %br
        = f.text_area :description, autofocus:true, autocomplete:"on", class:"textarea_new", rows: '10', cols: '61', maxlength: '510',minlength: '10', placeholder: "Insert here the description about your paper.", id: "paper_description"


      .actions
        = f.submit "Create issue", class:"btn btn-green", id:"btn-new"
