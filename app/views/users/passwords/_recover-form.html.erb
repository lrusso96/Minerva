<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="md-form", id="email_field">
    <i class="fa fa-envelope prefix grey-text"></i>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", id: "md_email" %>
  </div>

  <div class="actions">
  	<div class="row">
  		<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9"></div>
  		<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
    		<%= f.submit "Reset password", class: "btn btn-green" %>
    	</div>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>