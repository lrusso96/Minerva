<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="container">
    <div class="row">
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "on", class:"text-field" %>
      </div>

      <div class="field">
        <%= f.label :surname %><br />
        <%= f.text_field :surname, autofocus: true, autocomplete: "on",
        class:"text-field"%>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-field"%>
      </div>

      <div class="field">
        <%= f.label :birthdate %><br />
        <%= f.date_field :birthdate, class:"text-field"%>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:"text-field"%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"text-field"%>
      </div>
      
      <div class="actions">
        <%= f.submit "Sign up for Minerva", class:"btn btn-green" %>
      </div>
    </div>
  </div>
<% end %>
