%header#minerva_header{:role => 'banner'}
  .container
    %nav.navbar.navbar-default
      .navbar-header
        = link_to "Minerva", root_path, id:"logo"
        %button#toggle-nav.navbar-toggle{"data-toggle" => "collapse", "data-target" => "#navbar"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      #navbar.navbar-collapse.collapse
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "Explore", explore_path
          %li= link_to "All users", users_path
          - if user_signed_in?
            %li.dropdown.head_profile_pic
              %button.btn.btn-primary.dropdown-toggle.btn-toggle-head{"data-toggle" => "dropdown", :type => "button"}
                %img{:class => "profile_profile_pic" , :src => gravatar_url_for(current_user, size: 20)}/
                %span.caret
              %ul.dropdown-menu
                %li.dropdown-header
                  %b=current_user.name + " " + current_user.surname
                %li.dropdown-header= '@'+current_user.name+current_user.surname
                %li.divider
                %li= link_to "Profile", current_user
                %li= link_to "Settings", edit_user_registration_path
                %li= link_to "Statistics", '#'
                %li= link_to "Help", help_path
                %li.divider
                %li= link_to "Log out", destroy_user_session_path, method: :delete
          - else
            %li= link_to "Home", root_path
            %li= link_to "Papers", '#'
            %li= link_to "Help", help_path
            %li= link_to "Contact", '#'
            %li= link_to "Log in", new_user_session_path
    
