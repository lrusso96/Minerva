%li.dropdown.head_profile_pic
  %button.btn.btn-primary.dropdown-toggle.btn-toggle-head{"data-toggle" => "dropdown", type: "button"}
    %img{class: "profile_profile_pic" , src: gravatar_url_for(current_user, size: 20)}/
    %span.caret
  %ul#btn-menu.dropdown-menu
    %li.dropdown-header
      %b=current_user.fullname
    %li.dropdown-header= current_user.formatted_nickname
    %li.divider
    %li= link_to "Profile", current_user
    %li= link_to "Settings", edit_user_registration_path
    %li= link_to "Help", help_path
    %li.divider
    %li= link_to "Log out", destroy_user_session_path, method: :delete
