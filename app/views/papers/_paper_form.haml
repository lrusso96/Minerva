= form_for [@user, @paper] do |f|
  .container-fluid.left
    .row
      .field
        = f.label:title, class:"label_new"
        %br
        = f.text_field:title, autofocus:true, autocomplete:"on", class:"textfield_new"
        
      .field
        = f.label:description, class:"label_new"
        %br
        = f.text_area:description, autofocus:true, autocomplete:"on", class:"textarea_new", rows: '10', cols: '60', maxlength: '510', placeholder: "Insert here the description about your paper."

      .field
        = f.label :article, class:"label_new"
        %br
        = f.file_field :article, class:"filefield_new"

      .actions
        = f.submit "Create paper", class:"btn btn-green", id:"btn-new"